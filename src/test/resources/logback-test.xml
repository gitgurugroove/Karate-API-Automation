<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level %logger{40} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- âœ… ENABLE Karate logs -->
    <logger name="com.intuit.karate" level="INFO"/>

    <!-- âŒ Disable Thymeleaf completely -->
    <logger name="org.thymeleaf" level="OFF"/>

    <!-- ðŸ”‡ Reduce noise -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.apache.http" level="INFO"/>
    <logger name="org.gradle" level="INFO"/>

    <!-- Default logging -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
